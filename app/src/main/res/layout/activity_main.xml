<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrnd"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/supplyed_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="100dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003"
        app:srcCompat="@drawable/supply_ed_logo" />

    <Button
        android:id="@+id/teacher_btn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_btn"
        android:onClick="teacherButtonClick"
        android:text="Teacher"
        android:textColor="#59a7e3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supplyed_logo"
        tools:text="Teacher" />

    <Button
        android:id="@+id/school_btn"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_btn"
        android:onClick="schoolButtonClick"
        android:text="School"
        android:textColor="#59a7e3"
        app:layout_constraintBottom_toTopOf="@+id/teacher_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supplyed_logo"
        tools:text="School" />


</androidx.constraintlayout.widget.ConstraintLayout>