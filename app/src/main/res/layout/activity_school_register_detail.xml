<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrnd"
    tools:context=".SchoolRegisterDetail">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="75dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/schoolInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="School Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Name "
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Phone  "
            android:inputType="phone" />

        <EditText
            android:id="@+id/addressLine1_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Address Line 1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addressLine2_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Address Line 2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/town_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Town"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/county_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="County"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/postcode_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Postcode"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="93dp"
        android:background="@drawable/custom_btn"
        android:onClick="registerSchoolDetailsOnClick"
        android:text="Submit"
        android:textColor="#59a7e3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>